<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Controls</title>
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: rgb(6, 6, 79);
            color: #fff;
            padding: 20px 30px;
            display: flex; /* Add display flex to arrange items horizontally */
            justify-content: space-between; /* Space between items */
            align-items: center; /* Vertically align items */
        }

        nav {
            display: flex;
            font-size: 20px;
        }

        nav a {
            color: #fff;
            text-decoration: none;
            margin: 0 20px;
            font-size: 22px;
        }

        main {
            margin-top: 50px;
            padding: 40px;
            padding-top: 80px;
            text-align: center;
        }

        form {
            max-width: 400px;
            margin: auto;
        }

        select {
            width: 100%;
            padding: 10px;
            font-size: 30px;
            margin-bottom: 30px;
            margin-top: 50px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            background-color: rgb(19, 19, 99);
            font-size: 20px;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }
        img{
            height: 100px;
        }

        button:hover {
            background-color: rgb(41, 57, 163);
        }

        /* Media query for screens less than 768px */
        /* Media query for screens less than 768px */
@media (max-width: 768px) {
    header {
        flex-direction: column;
        align-items: flex-end;
        padding: 10px;
    }

    nav {
        display: none;
        flex-direction: column;
        align-items: center;
        position: absolute;
        top: 50px;
        right: 0;
        background-color: rgb(6, 6, 79);
        width: 100%;
    }

    nav.active {
        display: flex;
    }
    main {
            margin-top: 10px;
            padding: 40px;
            text-align: center;
        }

    .menu-icon {
        display: block;
        text-align: center;
        padding: 10px;
        background-color: rgb(6, 6, 79);
        color: #fff;
        cursor: pointer;
    }

    .menu-icon:before {
        content: '\2630';
        font-size: 24px;
    }

    /* Toggle the 'active' class on click */
    .menu-icon.active:before {
        content: '\2715';
    }
    img{
        height: 60px;
    }
    nav a {
        margin: 10px 0; /* Add spacing between the links */
        font-size: 15px;
        padding: 5px 50px; /* Add padding to the links */
    }
    button {
            background-color: rgb(19, 19, 99);
            color: #fff;
            font-size: 15px;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }
        select {
            width: 100%;
            padding: 10px;
            font-size: 20px;
            margin-bottom: 10px;
            margin-top: 50px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
}

    </style>
</head>
<body>
    <header>
        <nav>
            <a href="/home">Home</a>
            <a href="/admin/findBranch">searchBranch</a>
            <a href="/admin/findName">searchName</a>
            <a href="/addNewUser">Upload Info</a>
            <a href="/logout">LogOut</a>
        </nav>
        <div class="menu-icon" onclick="toggleMenu()"></div>
    </header>
    <main>
        <form action="/admin/findBranch/branch" method="post">
            <select name="branch" aria-placeholder="select branch">
                <option value="">Select Branch</option>
                <option value="CS-CORE">CS-CORE</option>
                <option value="CS-AIML">CS-AIML</option>
                <option value="CS-AI ">CS-AI</option>
                <option value="CS-DS">CS-DS</option>
                <option value="CS-CYS">CS-CYS</option>
                <option value="CS-IOT">CS-IOT</option>
                <option value="CS-HINDI">CS-HINDI</option>
                <option value="AIDS">AIDS</option>
                <option value="EC">EC</option>
                <!-- Add more options as needed -->
            </select>
            <button type="submit">Search</button>
        </form>
    </main>
    <script>
        function toggleMenu() {
            var nav = document.querySelector('nav');
            var menuIcon = document.querySelector('.menu-icon');
            if (nav.classList.contains('active')) {
                nav.classList.remove('active');
                menuIcon.classList.remove('active');
            } else {
                nav.classList.add('active');
                menuIcon.classList.add('active');
            }
        }
    </script>
</body>
</html>
